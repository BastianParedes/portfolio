{
    "autoPlay": true,
    "fullScreen": false,
    "background": {
    },
    "fpsLimit": 60,
    "interactivity": {
        "detectsOn": "canvas",
        "events": {
            "onHover": {
                "enable": true,
                "mode": "grab"
            },
            "onClick": {
                "enable": true,
                "mode": "push"
            }
        },
        "modes": {
            "push": {
                "quantity": 1
            },
            "grab": {
                "distance": 200,
                "width": 20
            }
        }
    },
    "particles": {
        "color": {
            "value":"rgb(35, 52, 250)"
        },
        "number": {
            "value": 30,
            "limit": 30
        },
        "move": {
            "enable": true,
            "direction": "top",
            "outModes": {
                "top": "out",
                "right": "out",
                "bottom": "none",
                "left": "out"
            },
            "random": true,
            "speed": 2,
            "trail": {
                "enable": false
            },
            "vibrate": false
        },
        "size": {
            "value": {
                "min": 1,
                "max": 5
            },
            "animation": {
                "enable": true,
                "speed": 5
            }
        },
        "shape": {
            "type": "circle"
        },
        "rotate": {
            "enable": false
        },
        "links": {
            "color": "rgb(35, 52, 250)",
            "distance": 200,
            "enable": true,
            "width": 2
        }
    },
    "pauseOnBlur": true,
    "pauseOnOutsideViewport": true
}